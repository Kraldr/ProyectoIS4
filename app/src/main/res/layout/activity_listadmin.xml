<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listadmin">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.078">

        <EditText
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="-130dp"
            android:layout_marginRight="24dp"
            android:autofillHints="Titulo"
            android:background="@drawable/ic_field"
            android:drawableStart="@drawable/ic_baseline_class_24"
            android:drawableLeft="@drawable/ic_baseline_class_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Titulo"
            android:inputType="textEmailAddress"
            android:padding="16dp" />


        <EditText
            android:id="@+id/txtIMG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:autofillHints="URL Image"
            android:background="@drawable/ic_field"
            android:drawableStart="@drawable/ic_baseline_image_24"
            android:drawableLeft="@drawable/ic_baseline_image_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="URL Image"
            android:padding="16dp" />

        <EditText
            android:id="@+id/txtDescrips"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:autofillHints="Descripción"
            android:background="@drawable/ic_field"
            android:drawableStart="@drawable/ic_baseline_subtitles_24"
            android:drawableLeft="@drawable/ic_baseline_subtitles_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:padding="16dp" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:padding="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegistro"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_buttom"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:text="Registrar archivo"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCrearTipo"
            android:layout_marginBottom="-50dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_buttom"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:text="Registrar Tipo"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>